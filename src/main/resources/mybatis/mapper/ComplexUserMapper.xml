<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.abigail830.mybatictest.infrastructure.mapper.UserMapper" >

    <resultMap id="ComplexBaseResultMap" type="com.github.abigail830.mybatictest.infrastructure.entity.UserEntity" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="avatar_url" property="avatarUrl" jdbcType="VARCHAR" />
        <result column="gender" property="gender" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Complex_Base_Column_List" >
        id, user_name, gender, avatar_url
    </sql>

    <select id="getAllComplexUsers" resultMap="ComplexBaseResultMap"  >
        SELECT
        <include refid="Complex_Base_Column_List" />
        FROM user_tbl
    </select>

    <select id="getComplexUserById" parameterType="java.lang.Integer" resultMap="ComplexBaseResultMap" >
        SELECT
        <include refid="Complex_Base_Column_List" />
        FROM user_tbl
        WHERE id = #{id}
    </select>

</mapper>